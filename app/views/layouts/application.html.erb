<!DOCTYPE html>
<html>
  <head>
    <title>TheIceCreamShop</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body>
  <div class="top-container" id="banner-color">
  <nav>
	<div class="nav-div">
		<ul>
		  <li><a href="/"> La Ice Cream&eacute Shoppe</a></li>	
		  <li><a href="/">Home</a></li>
		  <li><a href="/static_pages/about">About</a></li>
		  <li><a href="/static_pages/contact">Contact</a></li>
      <% if (!session[:user_id]) %>
  		  <li><a href="/sessions/new"><button>Log In</button></a></li>
  		  <li><a href="/users/new"><button> SIGN UP</button></a></li>
      <% else %>
        <li><a href="/users/<%= session[:user_id] %>"><button>Your Page</button></a></li>
        <li><button><%= link_to "Log out", "/sessions/destroy", method: :delete,
                  data: { confirm: "You sure?" } %></button></li>
      <% end %>
		</ul>

	</div>
  </nav>
</div>
    <%= yield %>
  </body>
</html>
